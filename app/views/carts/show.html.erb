
<% subtotal = 0; %>
<% @order_items.each do |item| %>

<h3> <%=item.book.name %> </h3>
<img src="<%=item.book.image_url %>">
<h5> $<%= item.book.price %> </h5>

<%= form_for item do |f| %>
    <%= f.hidden_field :book_id, :value => item.book.id %>
    <%= f.number_field :quantity, :value => item.quantity.to_i, :min => 1 %>
    <%= f.submit "Update Cart" %>
    
    <%end%>
<%= button_to "Remove from cart", order_item_path(item) , method: :delete %>




<% subtotal +=  item.total%>



<% end %>

<h1>Subtotal: $<%= subtotal %> </h1>
<!-- need to figure out a way to send the whole order item object to order show, order item  -->
<% session[:checkout_items] = @order_items %>
<%= button_to "Checkout", orders_path, method: :post  %>