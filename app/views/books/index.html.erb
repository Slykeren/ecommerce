<%#  %>
<%= debug session[:user_id] %>
<%= debug session[:cart] %>
<% @books.each do |book| %>
<div class="card" style="width: 18rem;">
  <%# <img src="..." class="card-img-top" alt="..."> %>
  <div class="card-body">
    <h5 class="card-title"><%= link_to book.name, book %></h5>
    <img src="<%= book.image_url %>"/>

    <p class="card-text"><%= book.author %></p>
    <h6>$<%= book.price %></h6>

    <% if @cart.include?(book) %>
    <p> <%= button_to 'Remove from Cart', remove_from_cart_path(book), method: :delete, class: 'btn btn-primary' %> </p>
    <% else %>
    <h5> <%= link_to "Add to Cart", add_to_cart_path(book.id), method: :post, class: 'btn btn-primary' %> </h5>
    <% end %>


  </div>
</div>

<% end %>

